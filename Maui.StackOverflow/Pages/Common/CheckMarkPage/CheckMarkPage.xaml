<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maui.StackOverflow.CheckMarkPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="CheckMarkPage">

    <VerticalStackLayout>
        <Grid
            Padding="10,10,10,10"
            BackgroundColor="Orange"
            WidthRequest="300">
            <Grid Padding="0" ColumnDefinitions="Auto,*">
                <Grid HeightRequest="32" WidthRequest="32">
                    <Image Source="{Binding IsChecked, Source={Reference checkBox}, StringFormat='icon_check_{0}.png'}" />
                    <CheckBox x:Name="checkBox" Opacity="0" />
                </Grid>
                <Label
                    Grid.Column="1"
                    Padding="10,0,0,0"
                    BackgroundColor="Yellow"
                    Text="Super User"
                    VerticalOptions="Fill"
                    VerticalTextAlignment="Center" />
            </Grid>
        </Grid>
    </VerticalStackLayout>

</ContentPage>