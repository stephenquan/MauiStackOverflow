<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maui.StackOverflow.ImageClipPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="ImageClipPage">
    <VerticalStackLayout Padding="20,20,20,20" Spacing="20">
        <Border HeightRequest="100">
            <StackLayout>
                <Image
                    Aspect="AspectFill"
                    Source="t_pose.png"
                    WidthRequest="128" />
            </StackLayout>
        </Border>
        <Border HeightRequest="100">
            <StackLayout>
                <Image
                    Aspect="AspectFill"
                    Source="t_pose.png"
                    TranslationY="-60"
                    WidthRequest="128" />
            </StackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>